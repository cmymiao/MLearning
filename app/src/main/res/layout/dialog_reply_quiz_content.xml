<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="?attr/qmui_dialog_padding_horizontal"
    android:paddingEnd="?attr/qmui_dialog_padding_horizontal">

    <EditText
        android:id="@+id/dialog_reply_quiz_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="请输入回复内容"
        android:textSize="15sp"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:background="@drawable/mine_edittext_selector"/>

</LinearLayout>